{
  "name": "pms-backend",
  "version": "2.0.0",
  "description": "PMS Backend API Service - Core business logic and REST API endpoints for microservices architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "migrate": "prisma migrate deploy",
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": ["pms", "property-management", "backend", "api", "microservices", "express", "typescript"],
  "author": "Cosmos Order Ltd",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.1",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.4",
    "@prisma/client": "^6.16.1",
    "redis": "^4.7.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.2.2",
    "winston": "^3.17.0",
    "nodemailer": "^6.9.18",
    "stripe": "^18.6.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "dayjs": "^1.11.14",
    "cron": "^3.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.43",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.19",
    "@types/multer": "^1.4.12",
    "@types/cron": "^2.4.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.8.3",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "supertest": "^7.0.0",
    "eslint": "^9.26.0",
    "prettier": "^3.0.3",
    "@typescript-eslint/parser": "^8.21.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "prisma": "^6.16.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}